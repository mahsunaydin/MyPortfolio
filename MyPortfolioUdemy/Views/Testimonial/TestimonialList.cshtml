@model List<Testimonial>

@{
    ViewData["Title"] = "TestimonialList";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title" style="background-color:aliceblue">Referanslar</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <div class="card-sub">
                            Referanslar İle İlgili İşlemleri Buradan Yapabilirsiniz
                        </div>
                        <table class="table mt-3 table-hover">
                            <thead>
                                <tr>
                                    <th>Adı Soyadı</th>
                                    <th>Unvan</th>
                                    <th>Açıklama</th>
                                    <th>Güncelle</th>
                                    <th>Sil</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.NameSurname</td>
                                        <td>@item.Title</td>
                                        <td>@item.Description</td>
                                        <td><a href="/Testimonial/UpdateTestimonial/@item.TestimonialId" class="btn btn-warning">Güncelle</a></td>
                                        <td><a href="/Testimonial/DeleteTestimonial/@item.TestimonialId" class="btn btn-danger">Sil</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/Testimonial/CreateTestimonial" class="btn btn-primary">Yeni Referans Ekle</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>