@model Testimonial

@{
    ViewData["Title"] = "CreateTestimonial";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Referanslar</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        Referans Ekleme Sayfası
                    </div>
                    <div class="card-body">

                        <form method="post">
                            <label>Referansın Adı & Soyadı</label>
                            <input type="text" asp-for="NameSurname" class="form-control" />
                            <br />
                            <label>Referansın Unvanı</label>
                            <input type="text" asp-for="Title" class="form-control" />
                            <br />
                            <label>Açıklama</label>
                            <textarea rows="3" asp-for="Description" class="form-control"></textarea>
                            <br />
                            <label>Görsel Yolu</label>
                            <input type="text" asp-for="ImageUrl" class="form-control" />
                            <br />
                            <button class="btn btn-primary">Referans Bilgisini Ekle</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

