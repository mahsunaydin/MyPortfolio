@model SocialMedia

@{
    ViewData["Title"] = "CreateSocialMedia";
    Layout = "~/Views/Layout/Index.cshtml";
}


<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Sosyal Medya</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        Sosyal Medya Ekleme Sayfası
                    </div>
                    <div class="card-body">

                        <form method="post">
                            <label>Sosyal Medya Adı</label>
                            <input type="text" asp-for="Title" class="form-control" />
                            <br />
                            <label>Yönlendirme Adresi</label>
                            <input type="text" asp-for="Url" class="form-control" />
                            <br />
                            <label>İkon Tanımı</label>
                            <input type="text" asp-for="Icon" class="form-control" />
                            <br />
                            <button class="btn btn-primary">Sosyal Medya Bilgisini Ekle</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

