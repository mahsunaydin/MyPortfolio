@model List<SocialMedia>

@{
    ViewData["Title"] = "SocialMediaList";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title" style="background-color:aliceblue">Sosyal Medya</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <div class="card-sub">
                            Sosyal medya bilgileri için işlemlerini buradan yapabilirsiniz.
                        </div>
                        <table class="table mt-3 table-hover">
                            <thead>
                                <tr>
                                    <th>Sosyal Medya Adı</th>
                                    <th>Sayfa Adresi</th>
                                    <th>İkon Tanımı</th>
                                    <th>Güncelle</th>
                                    <th>Sil</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Title</td>
                                        <td><a href="https://@item.Url">@item.Url</a></td>
                                        <td>@item.Icon</td>
                                        <td><a href="/SocialMedia/UpdateSocialMedia/@item.SocialMediaId" class="btn btn-warning">Güncelle</a></td>
                                        <td><a href="/SocialMedia/DeleteSocialMedia/@item.SocialMediaId" class="btn btn-danger">Sil</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/SocialMedia/CreateSocialMedia" class="btn btn-primary">Yeni Sosyal Medya Bilgisi Ekle</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

