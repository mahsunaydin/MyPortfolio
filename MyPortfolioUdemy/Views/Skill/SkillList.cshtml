@model List<Skill>

@{
    ViewData["Title"] = "SkillList";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title" style="background-color:aliceblue">Yetenekler</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <div class="card-sub">
                            "Yetenekler İle İlgili İşlemleri Buradan Yapabilirsiniz"
                        </div>
                        <table class="table mt-3 table-stripted table-hover">
                            <thead>
                                <tr>
                                    <th>Başlık</th>
                                    <th>Değer / Seviye</th>
                                    <th>Yüzdelik Görünümü</th>
                                    <th>Güncelle</th>
                                    <th>Sil</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Title</td>
                                        <td>@item.Value</td>
                                        <td><div class="progress percent" style="width: @item.Value%;"><span>@item.Value%</span></div></td>
                                        <td><a href="/Skill/UpdateSkill/@item.SkillId" class="btn btn-warning">Güncelle</a></td>
                                        <td><a href="/Skill/DeleteSkill/@item.SkillId" class="btn btn-danger">Sil</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/Skill/CreateSkill" class="btn btn-primary">Yeni Yetenek Ekle</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


