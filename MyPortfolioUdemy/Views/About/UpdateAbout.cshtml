@model About

@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Hakkımda</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Güncelleme Sayfası</div>
                    </div>
                    <div class="card-body">

                        <form method="post">
                            <input type="hidden" asp-for="AboutId" />
                            <label>Firma Bilgisi</label>
                            <input type="text" asp-for="Title" class="form-control" />
                            <br />
                            <input type="text" asp-for="SubDescription" class="form-control" />
                            <br />
                            <textarea rows="16" class="form-control" asp-for="Details"></textarea>
                            <br />
                            <button class="btn btn-success">Güncelle</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>